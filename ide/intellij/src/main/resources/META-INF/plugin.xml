<idea-plugin>
    <id>org.gala.ide.intellij</id>
    <name>GALA</name>
    <version>1.0-SNAPSHOT</version>
    <vendor email="support@gala.org" url="https://github.com/gala-lang/gala">GALA Team</vendor>

    <description><![CDATA[
    Support for GALA language (Go Alternative LAnguage).
    ]]></description>

    <change-notes><![CDATA[
    Initial release of GALA language support.
    ]]></change-notes>

    <idea-version since-build="232" until-build="255.*"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="GALA File" implementationClass="org.gala.ide.intellij.GalaFileType"
                  fieldName="INSTANCE" language="GALA" extensions="gala"/>
        <lang.parserDefinition language="GALA"
                               implementationClass="org.gala.ide.intellij.GalaParserDefinition"/>
        <lang.syntaxHighlighterFactory language="GALA"
                                       implementationClass="org.gala.ide.intellij.GalaSyntaxHighlighterFactory"/>
        <lang.commenter language="GALA" implementationClass="org.gala.ide.intellij.GalaCommenter"/>
        <lang.foldingBuilder language="GALA" implementationClass="org.gala.ide.intellij.GalaFoldingBuilder"/>
        <lang.braceMatcher language="GALA" implementationClass="org.gala.ide.intellij.GalaPairedBraceMatcher"/>
        <lang.psiStructureViewFactory language="GALA" implementationClass="org.gala.ide.intellij.GalaStructureViewFactory"/>
        <completion.contributor language="GALA" implementationClass="org.gala.ide.intellij.GalaCompletionContributor"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>
