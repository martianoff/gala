package main

import (
    . "martianoff/gala/test"
)

func main() {
    RunTest(TestCase(Name = "Addition", F = testAddition))
    RunTest(TestCase(Name = "Equality", F = testEquality))
    RunTest(TestCase(Name = "Booleans", F = testBooleans))
}

func testAddition() {
    val x = 1 + 1
    AssertEqual[int](x, 2)
}

func testEquality() {
    AssertEqual[string]("hello", "hello")
    AssertNotEqual[string]("hello", "world")
}

func testBooleans() {
    AssertTrue(true)
    AssertFalse(false)
}
